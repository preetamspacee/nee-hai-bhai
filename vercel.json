{
  "version": 2,
  "builds": [
    {
      "src": "apps/admin-dashboard/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/customer-portal/package.json", 
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/apps/admin-dashboard"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/apps/admin-dashboard/$1"
    },
    {
      "src": "/customer/(.*)",
      "dest": "/apps/customer-portal/$1"
    }
  ]
}